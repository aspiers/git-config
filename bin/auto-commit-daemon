#!/usr/bin/env zsh

debug=
if [[ "$1" == '-d' ]]; then
    debug=-d
    shift
fi

if [ $# != 1 ]; then
    cat <<EOF >&2
Usage: $(basename $0) [-d] REPO-DIR
EOF
    exit 1
fi

repo_dir="$1"

for var in SLEEP MIN_AGE; do
    if [ -z "${(P)var}" ]; then
        echo >&2 "Error: \$$var not set; aborting"
        exit 1
    fi
done

cd "$repo_dir"

for var in name email; do
    if ! git config user.$var >/dev/null; then
        echo >&2 "Error: user.$var not set in git config; aborting"
        exit 1
    fi
done

while true; do
    git auto-commit $debug -m "$MIN_AGE"
    sleep "$SLEEP"
done
