#!/bin/bash

type=commit
for (( i = 1; i <= $#; i++ )); do
    val="${!i}"
    case "$val" in
        -*) :
            #echo "Ignoring option $val"
            ;;
        *)
            type=`git cat-file -t "$val"`
            #echo "Type of $val is $type"
            break
            ;;
    esac
done

case "$type" in
    blob)
        export GIT_PAGER_MODE=none
        ;;
    commit)
        if [ $# -gt 1 ]; then
            export GIT_PAGER_MODE=commit
        else
            export GIT_PAGER_MODE=diff
        fi
        ;;
esac
        
. $ZDOTDIR/.shared_rc.d/git-pager

#echo git show "$@"
exec git show "$@"
